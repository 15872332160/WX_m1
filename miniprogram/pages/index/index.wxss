/**index.wxss**/
page {
  font-family: -apple-system, SF UI Text, Arial, PingFang SC, Hiragino Sans GB, Microsoft YaHei, WenQuanYi Micro Hei, sans-serif;
  color: #333;
  background: #f5f5f5;
}
.header,
.homepage,
.header {
  width: 100%;
  background: #fff;
  border: 1px solid rgba(0, 0, 0, 0.1);
  border-left: none;
  border-right: none;
  transition: all 300ms ease;
}
.header {
  height: 90rpx;
  box-sizing: border-box;
  box-shadow: 0 8rpx 30rpx rgba(0, 0, 0, 0.1);
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  z-index: 100;
  display: flex;
}
.header span {
  flex: 1;
  display: flex;
  justify-content: center;
  align-items: center;
}
.header span image {
  width: 103rpx;
  height: 77rpx;
  margin-right: 25rpx;
}
.header span em {
  font-size: 30rpx;
  vertical-align: middle;
}
.header span > view {
  display: flex;
  justify-content: flex-start;
}
.header span.downLoad {
  display: flex;
  justify-content: flex-end;
  padding-right: 30rpx;
  font-size: 28rpx;
  color: #f60;
}
.header span.downLoad i {
  vertical-align: middle;
  font-size: 28rpx;
  margin-top: 5rpx;
}
.homepage {
  margin-top: 90rpx;
  background: #f5f5f5;
}
.homepage .hot {
  padding: 0 40rpx 20rpx;
  background: #fff;
}
.homepage .hot .hotTop {
  display: flex;
  height: 90rpx;
  align-items: center;
}
.homepage .hot .hotTop span {
  flex: 1;
  font-size: 28rpx;
}
.homepage .hot .hotTop span i {
  height: 30rpx;
  width: 30rpx;
  margin: 7rpx 5rpx 0 0;
}
.homepage .hot .hotTop span:first-child {
  display: flex;
  justify-content: flex-start;
  font-weight: 600;
}
.homepage .hot .hotTop span:last-child {
  display: flex;
  justify-content: flex-end;
  color: #999;
}
.homepage .hot .hotCon span {
  display: inline-block;
  padding: 10rpx 20rpx;
  margin: 0 20rpx 20rpx 0;
  font-size: 24rpx;
  position: relative;
  color: #ea6f5a;
  border: 1px solid #ea6f5a;
  border-radius: 10rpx;
}
.homepage #list {
  margin-top: 15rpx;
  background: #fff;
  padding: 0 30rpx;
}
.homepage #list ul {
  position: relative;
  display: block;
}
.homepage #list ul li {
  display: block;
  border-bottom: 1rpx solid #f0f0f0;
  padding: 30rpx 0;
  position: relative;
  width: 100%;
}
.homepage #list ul li span {
  display: block;
}
.homepage #list ul li span.title {
  font-size: 36rpx;
  font-weight: bolder;
  color: #333;
  line-height: 50rpx;
  max-height: 100rpx;
  white-space: normal;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}
.homepage #list ul li span.abstract {
  margin-top: 15rpx;
  font-size: 26rpx;
  color: #999;
}
.homepage #list ul li.hoverimage .content {
  padding-right: 200rpx;
  position: relative;
}
.homepage #list ul li.hoverimage .content .wrapimage {
  width: 150rpx;
  height: 150rpx;
  position: absolute;
  right: 20rpx;
  top: 50%;
  margin-top: -75rpx;
}
.homepage #list ul li.hoverimage .content .wrapimage image {
  display: block;
  max-width: 100%;
  max-height: 100%;
}
#rotate {
  animation: 0.3s linear infinite Rotate;
}
@keyframes Rotate {
  0% {
    transform: rotate(0);
  }
  100% {
    transform: rotate(360deg);
  }
}
