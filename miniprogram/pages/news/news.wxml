<!--pages/news/news.wxml-->
<view class="container">
  <view class="header">
    <view class="lgrad"></view>
    <view class="ul">
      <view
              wx:for="{{list}}"
              wx:key="index"
              bindtap="newsList"
              data-id="{{item.id}}"
              class="{{activeIndex==index?'li cur':'li'}}">
        <text>{{item.name}}</text></view>
    </view>
    <view class="rgrad"></view>
  </view>
</view>
