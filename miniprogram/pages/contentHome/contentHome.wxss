.header {
  height: 90rpx;
  box-sizing: border-box;
  box-shadow: 0 8rpx 30rpx rgba(0, 0, 0, 0.1);
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  z-index: 100;
  display: flex;
}
.header span {
  flex: 1;
  display: flex;
  justify-content: center;
  align-items: center;
}
.header span image {
  width: 103rpx;
  height: 77rpx;
  margin-right: 25rpx;
}
.header span em {
  font-size: 30rpx;
  vertical-align: middle;
}
.header span > view {
  display: flex;
  justify-content: flex-start;
}
.header span.downLoad {
  display: flex;
  justify-content: flex-end;
  padding-right: 30rpx;
  font-size: 28rpx;
  color: #f60;
}
.header span.downLoad i {
  vertical-align: middle;
  font-size: 28rpx;
  margin-top: 5rpx;
}
.header {
  width: 100%;
  background: #fff;
  border: 1px solid rgba(0, 0, 0, 0.1);
  border-left: none;
  border-right: none;
  transition: all 300ms ease;
}
#main {
  margin-top: 90rpx;
  background: #fff;
}
#main .main-info {
  overflow: hidden;
  padding: 40rpx 30rpx;
}
#main .main-info image {
  width: 145rpx;
  height: 145rpx;
  border-radius: 10rpx;
  border: 1px solid #ddd;
}
#main .main-info .summary {
  float: right;
  width: 75%;
}
#main .main-info .summary .name {
  font-size: 36rpx;
  font-weight: bolder;
}
#main .main-info .summary .desc {
  font-size: 26rpx;
  margin: 10rpx 0;
  color: #999;
}
#main .main-info .summary .desc .nikeName {
  color: blue;
  display: inline-block;
  font-size: 26rpx;
  margin-right: 10rpx;
}
#main .main-info .summary .intro {
  font-size: 28rpx;
  color: #484848;
  line-height: 50rpx;
  overflow: hidden;
  position: relative;
}
#main .main-info .summary .intro .iconfont {
  font-size: 36rpx;
  margin-left: 10rpx;
  line-height: 50rpx;
  display: inline-block;
}
#main .main-info .summary .introHide {
  font-size: 30rpx;
  margin-top: 15rpx;
  color: #484848;
}
#main .main-info .summary .introHide .iconfont {
  transform: rotate(180deg);
  transform-origin: center;
  display: inline-block;
  margin-left: 10rpx;
}
#main .main-info .summary button {
  height: 90rpx;
  line-height: 90rpx;
  background: #42c02e;
  color: #fff;
  font-size: 38rpx;
  border-radius: 10rpx;
  margin-top: 30rpx;
}
#main .hr {
  height: 20rpx;
  width: 100%;
  background: #f5f5f5;
}
#main .list {
  display: flex;
  text-align: center;
  height: 85rpx;
  line-height: 85rpx;
  border-bottom: 1px solid #f0f0f0;
}
#main .list .listLi {
  flex: 1;
  font-size: 30rpx;
}
#main .list .listLi.cur {
  color: #ea6f5a;
}
#main .list .listLi.cur:after {
  content: '';
  display: block;
  width: 55%;
  margin: 0 auto;
  border-bottom: 2px solid #ea6f5a;
}
