.header {
  height: 90rpx;
  box-sizing: border-box;
  box-shadow: 0 8rpx 30rpx rgba(0, 0, 0, 0.1);
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  z-index: 100;
  display: flex;
}
.header span {
  flex: 1;
  display: flex;
  justify-content: center;
  align-items: center;
}
.header span image {
  width: 103rpx;
  height: 77rpx;
  margin-right: 25rpx;
}
.header span em {
  font-size: 30rpx;
  vertical-align: middle;
}
.header span > view {
  display: flex;
  justify-content: flex-start;
}
.header span.downLoad {
  display: flex;
  justify-content: flex-end;
  padding-right: 30rpx;
  font-size: 28rpx;
  color: #f60;
}
.header span.downLoad i {
  vertical-align: middle;
  font-size: 28rpx;
  margin-top: 5rpx;
}
.header {
  width: 100%;
  background: #fff;
  border: 1px solid rgba(0, 0, 0, 0.1);
  border-left: none;
  border-right: none;
  transition: all 300ms ease;
}
#main {
  margin-top: 90rpx;
  background: #fff;
  padding: 0 30rpx;
}
#main .main-info {
  padding-top: 40rpx;
}
#main .main-info image {
  width: 145rpx;
  height: 145rpx;
  border-radius: 10rpx;
  border: 1px solid #ddd;
}
#main .main-info .summary {
  float: right;
  width: 75%;
}
#main .main-info .summary .name {
  font-size: 36rpx;
  font-weight: bolder;
}
#main .main-info .summary .desc {
  font-size: 26rpx;
  margin: 10rpx 0;
  color: #999;
}
#main .main-info .summary .desc .nikeName {
  color: blue;
  display: inline-block;
  font-size: 26rpx;
  margin-right: 10rpx;
}
#main .main-info .summary .intro {
  font-size: 26rpx;
  color: #484848;
  line-height: 50rpx;
  overflow: hidden;
  position: relative;
}
