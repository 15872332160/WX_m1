#list {
  margin-top: 15rpx;
  background: #fff;
  padding: 0 30rpx;
}
#list ul {
  position: relative;
  display: block;
}
#list ul li {
  display: block;
  border-bottom: 1rpx solid #f0f0f0;
  padding: 30rpx 0;
  position: relative;
  width: 100%;
}
#list ul li span {
  display: block;
}
#list ul li span.title {
  font-size: 36rpx;
  font-weight: bolder;
  color: #333;
  line-height: 50rpx;
  max-height: 100rpx;
  white-space: normal;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}
#list ul li span.abstract {
  margin-top: 15rpx;
  font-size: 26rpx;
  color: #999;
}
#list ul li.hoverimage .content {
  padding-right: 200rpx;
  position: relative;
}
#list ul li.hoverimage .content .wrapimage {
  width: 150rpx;
  height: 150rpx;
  position: absolute;
  right: 20rpx;
  top: 50%;
  margin-top: -75rpx;
}
#list ul li.hoverimage .content .wrapimage image {
  display: block;
  max-width: 100%;
  max-height: 100%;
}
